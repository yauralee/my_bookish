<%= stylesheet_link_tag "register_login" %>


<div class="register">
  <h1 class="page_title">Welcome to Bookish</h1>
  <div class="col-md-4 col-md-offset-4 register_info">
    <%= form_for(@user, url: signup_path) do |f| %>
        <%= render 'users/register_error' %>

        <%= f.label :邮箱 %>
        <%= f.email_field :email %>

        <%= f.label :密码 %>
        <%= f.password_field :password %>

        <%= f.submit "注册", class: "btn-register" %>
    <% end %>
    <span class="has_account_btn"><%= link_to '我已有账户,点击登录' %></span>
  </div>
</div>
